<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <!-- ************************************************************* -->
  <!-- *** POM Relationships *************************************** -->
  <!-- ************************************************************* -->
  <parent>
    <artifactId>libraries</artifactId>
    <groupId>org.openmole.web</groupId>
    <version>0.8-alpha2</version>
  </parent>
  <!--Used to build the symbolic name of the bundle-->
  <artifactId>org.scalatra</artifactId>
  <!-- ************************************************************* -->
  <!-- *** Build Settings ****************************************** -->
  <!-- ************************************************************* -->
  <packaging>bundle</packaging>
  <!-- ************************************************************* -->
  <!-- *** Project Information ************************************* -->
  <!-- ************************************************************* -->
  <name>${project.artifactId}</name>
  <!--optional. Use this property to tune the exported packages-->
  <properties>
    <libraries.export.packages>org.scalatra.*,org.fusesource.*</libraries.export.packages>
    <eclipse.buddypolicy>global</eclipse.buddypolicy>
    <embed-dep>*;groupId=!org.scala-lang|org.openmole.core|org.openmole.web|org.slf4j;type=!pom;inline=true</embed-dep>
  </properties>
  <dependencies>
    <dependency>
      <groupId>org.scalatra</groupId>
      <artifactId>scalatra_${scala.major.version}</artifactId>
      <!-- todo ask romain -->
      <version>${lib.org.scalatra.version}</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.scalatra</groupId>
      <artifactId>scalatra-scalate_${scala.major.version}</artifactId>
      <version>${lib.org.scalatra.version}</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.openmole.web</groupId>
      <artifactId>ch.qos.logback</artifactId>
      <version>${project.version}</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.openmole.web</groupId>
      <artifactId>org.slf4j</artifactId>
      <version>${project.version}</version>
    </dependency>
  </dependencies>
</project>
